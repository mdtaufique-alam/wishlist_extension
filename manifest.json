{
  "manifest_version": 3,
  "name": "Wishlist Adder",
  "version": "1.0",
  "description": "Save products from any site to your wishlist",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["*://*.flipkart.com/*", "*://*.amazon.in/*", "https://wishlist-extension.vercel.app/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.flipkart.com/*", "*://*.amazon.in/*"],
      "js": ["content.js"]
    }
  ]
}
